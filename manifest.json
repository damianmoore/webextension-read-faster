{
  "description": "Displays the selected text, one word at a time, so you can read it faster.",
  "manifest_version": 2,
  "name": "Read Faster",
  "version": "0.0.1",

  "permissions": [
    "contextMenus"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]

}
